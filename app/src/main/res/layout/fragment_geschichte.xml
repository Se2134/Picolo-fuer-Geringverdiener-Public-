<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Geschichte">


    <TextView
        android:id="@+id/geschichte_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/geschichte_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geschichte_bilder"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/geschichte_bilder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:contentDescription="@string/geschichte_1"
        android:src="@drawable/placeholder_pic"
        app:layout_constraintBottom_toTopOf="@id/geschichte_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_geschichte"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>